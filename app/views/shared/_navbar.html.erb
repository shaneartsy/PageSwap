<div class="navbar navbar-expand-sm navbar-light navbar-lewagon z">
  <div class="ml-1">
    <%= link_to root_path do %>
      <%= image_tag "PS_icon-01.png", height: '60px', width: '60px' %>
    <% end %>
</div>
<div>
  <h1 class="nav-header mr-1">PageSwap</h1>
</div>
  <% if user_signed_in? && current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, height: '50px', width: '50px', class: "dropdown-toggle avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
  <% else %>
    <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTXwVMBH75TaekX3rtcgkfKaoMOUHvTc2C17g&usqp=CAU", height: '50px', width: '50px', class: "dropdown-toggle avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
  <% end %>

  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <%= link_to "Home", root_path, class: "dropdown-item" %>
      <%= link_to "About Us", pages_about_us_path, class: "dropdown-item" %>
      <%= link_to "FAQ", pages_faq_path, class: "dropdown-item" %>
    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path(current_user), method: :delete, class: "dropdown-item" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "dropdown-item" %>
    <% end %>
  </div>
</div>
