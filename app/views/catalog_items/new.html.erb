<div class="mt-3 container search-form2">
  <%= form_tag new_catalog_item_path, method: :get, html: { autocomplete: "off" }, class: "search-bar" do %>
    <%= text_field_tag :query,
      params[:query],
      autocomplete: 'off',
      input_html: { class: "form-control" },
      placeholder: "Find your book"
      %>
      <%= button_tag type: "submit", class: "btn-search2" do %>
        <i class="fas fa-search"></i>
      <% end %>

  <% end %>

  <% if @results2 != nil %>
    <% @results2.reverse.each do |result| %>
      <div class="product-card product-card-bind" data-id="<%= result.id %>">
        <div class="product-details">
            <div class="product-details2">
              <% if result.photo.attached? %>
                <%= cl_image_tag(result.photo.key, crop: :fill, height: 120, class: "product-img") %>
              <% end %>
            </div>
            <div class="product-details1">
              <div class="product-p">
                <div>
                  <h6 class="mb-1"><%= result.title %></h6>
                  <p id="small-title"><%= result.author %></p>
                </div>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  <% end %>
  <div class="catalog-form">
    <%= simple_form_for(@item) do |f| %>
        <%= f.input :quality %>
        <%= f.input :book, collection: @results.reverse, as: :hidden %>
        <%= f.input :available, as: :radio_buttons, label: "Mark as available?" %>
      <%= f.button :submit, "Add to bookshelf!", class: "btn-success mt-1 p-2 btn-br" %>
    <% end %>
  </div>
</div>
