<div class="messages-page">
  <div class="message-back"><%= link_to "Back", chatrooms_path, class: "btn btn-secondary" %></div>
  <div id="messages" data-chatroom-id="<%= chatroom.id %>">
    <% if chatroom.messages.size != 0 %>
      <% chatroom.messages.each do |message| %>
        <%= render "message", message: message %>
      <% end %>
    <% end %>
  </div>
  <div class="message-form">
    <%= simple_form_for [ chatroom, message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Type message here", input_html: { class: "message-input" }, as: :string %>
      <%= f.button :submit, "Send", class: "send-button" %>
    <% end %>
  </div>
</div>
